<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F9D3D3"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/asset2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:src="@drawable/ic_asset_2_1" />
    <androidx.cardview.widget.CardView
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:cardCornerRadius="26dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="Share Copouns"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="335dp"
                android:layout_height="87dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="Do you have any non useful coupons ?? Go and share !!"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_group_6910"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/next_2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape"
                android:clickable="true"
                android:contextClickable="true"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="Get Started"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>